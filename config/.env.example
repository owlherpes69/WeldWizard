# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=weldwizard
DB_USER=username
DB_PASSWORD=password

# API keys and secrets (replace with actual keys in .env file)
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here

# Application settings
APP_ENV=development  # Change to 'production' in production environments
DEBUG=true           # Set to 'false' in production
LOG_LEVEL=info       # Logging level (e.g., debug, info, warning, error)

# Email configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=user@example.com
EMAIL_HOST_PASSWORD=email_password
EMAIL_USE_TLS=true

# External services
PAYMENT_GATEWAY_API_KEY=your_payment_gateway_key_here
ANALYTICS_TRACKING_ID=your_analytics_tracking_id_here

# Miscellaneous settings
APP_URL=http://localhost:8000
